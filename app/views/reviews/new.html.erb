<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, label: 'Say something nice', error: 'A review is mandatory' %>
    <%= f.input :rating, as: :radio_buttons, collection: 1..5, :item_wrapper_class => 'inline' %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
