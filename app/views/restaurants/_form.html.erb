<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: 'Restaurant Name', error: 'Restaurant name is mandatory, please specify one' %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORY, include_blank: "Select a category" %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
